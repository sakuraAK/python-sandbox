{
    "swagger": "2.0",
    "info": {
      "title": "Demo API",
      "version": "1.0.0"
    },
    "basePath": "/basic_api",
    "paths": {
      "/": {
        "get": {
          "description": "Returns message showing app is up",
          "produces": [
            "application/json"
          ],
          "responses": {
            "200": {
              "description": "Successful operation"
            }
          }
        }
      },
      "/users/{id}" : {
        "get": {
          "description": "Get user by id",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "JSON data for the api",
              "required": true,
              "schema": {
                "type": "integer"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User returned"
            },
            "400": {
              "description": "Invalid request data"
            }
          }
        }
      },

      "/users": {
        "post": {
          "description": "Add new user",
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "user data",
              "in": "body",
              "description": "JSON data for the api",
              "required": true,
              "schema": {
                "$ref": "#/definitions/UserData"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "User added"
            },
            "400": {
              "description": "Invalid request data"
            }
          }
        },
        "get": {
          "description": "Get users",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "filter",
              "in": "query",
              "description": "Filter the result",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Users list"
            },
            "400": {
              "description": "Invalid request data"
            }
          }
        }
      },
      "/tweets": {
        "post": {
          "description": "Add new tweet",
          "consumes": [
            "application/json"
          ],
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "tweet data",
              "in": "body",
              "description": "JSON data for the api",
              "required": true,
              "schema": {
                "$ref": "#/definitions/TweetData"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Tweet created"
            },
            "400": {
              "description": "Invalid request data"
            }
          }
        },
        "get": {
          "description": "Get tweets",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "filter",
              "in": "query",
              "description": "Filter the result",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Tweet list"
            },
            "400": {
              "description": "Invalid request data"
            }
          }
        }
      }
    },
    "definitions": {
      "UserData": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "TweetData": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "userId": {
            "type": "int"
          }
        }
      }
    }
  }